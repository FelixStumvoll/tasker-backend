{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "no-useless-escape": "off",
    "allowImportExportEverywhere": true,
    "indent": ["error", 4],
    "no-console": "off",
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-empty-pattern": "off"
  }
}
